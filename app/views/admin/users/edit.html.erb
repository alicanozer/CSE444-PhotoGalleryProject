<h1>Edit Account</h1>

<%= form_for @user do |f| %>
    <%= f.error_messages %>
    <%= render :partial => "form", :object => f %>
    <%= f.submit "Update" %>
<% end %>



<%= content_for :action_links do %>
    <%= link_to("Hesabı sil", {:action => "destroy", :id => @user},
                :confirm => "Hesabı silmek istediğinize eminmisiniz?",
                :method => :delete) %>
<% end %>