<h1>Giriş Yap</h1>

<%= form_for @user_session, :url => authenticate_path do |f|  %>
    <%= f.error_messages %>
    <%= f.label :email %><br/>
    <%= f.text_field :email , :html => {:class => "input"} %><br/>
    <br/>
    <%= f.label :password %><br/>
    <%= f.password_field :password, :html => {:class=> "input"}%><br/>
    <br/>
    <%= f.check_box :remember_me %><%= f.label :remember_me %><br/>
    <br/>
    <%= f.submit "Giriş Yap" %>

<% end %>